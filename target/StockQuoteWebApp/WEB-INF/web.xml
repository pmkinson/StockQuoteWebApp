<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>StockSearchServlet</servlet-name>
        <servlet-class>com.pkin.stocksearch.servlet.StockSearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StockSearchServlet</servlet-name>
        <url-pattern>/StockSearchServlet</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.text.ParseException</exception-type>
        <location>/StockSearch.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.io.FileNotFoundException</exception-type>
        <location>/ReturnedResults.jsp</location>
    </error-page>

</web-app>
